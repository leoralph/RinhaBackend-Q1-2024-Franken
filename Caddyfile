{
	{$CADDY_GLOBAL_OPTIONS}

	frankenphp {
		worker /srv/public/index.php 2
		{$FRANKENPHP_CONFIG}
	}
	order php_server before file_server
}

{$CADDY_EXTRA_CONFIG}

http://localhost {
	root * /srv/public/

	{$CADDY_SERVER_EXTRA_DIRECTIVES}

	@indexFiles file {
		try_files {path} index.php
		split_path .php
	}
	rewrite @indexFiles {http.matchers.file.relative}

	encode zstd gzip
	php_server
}
